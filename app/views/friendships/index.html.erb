<% provide(:title, "Friends List") %>

<div class="header header-filter" style="background: linear-gradient(to right, #feac5e, #c779d0, #4bc0c8);"></div>
  <div class="main main-raised">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2 class="text-center">Your Friends</h2>
          <% if @friends.empty? %>
            <h4>You have no friends yet.</h4>
            <%= link_to "Go make some!", users_path, class: "text-primary" %>
          <% else %>
            <ul class="media-list">
              <%= render partial: 'users/friend', collection: @friends %>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
