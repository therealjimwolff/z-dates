<div class="content">
  <%= form_for(Comment.new) do |f| %>
    <%= f.hidden_field :post_id, value: post.id %>
    <div class="form-group">
      <%= f.text_area :content, placeholder: "Your thoughts?", class: 'form-control' %>
    </div>
    <%= f.submit 'Comment', class: 'btn btn-primary btn-sm btn-raised' %>
  <% end %>
</div>
