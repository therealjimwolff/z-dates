<% content_for :features, "signup-page" %>
<% content_for :class, "signup-page" %>
<% content_for :devise_view, true %>

<% provide(:title, "Edit #{current_user.name}") %>

<div class="header header-filter" style="background-image: url('<%= image_path("edit_background.jpg") %>'); background-size: cover; background-position: top center;">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <div class="card card-signup">
          <h3 class="text-center">Edit Your Information</h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <div class="content">
              <%= devise_error_messages! %>

              <div class="form-group label-floating">
								<%= f.label :name, class: 'control-label' %>
								<%= f.text_field :name, class: 'form-control', autofocus: true %>
							</div>

              <div class="form-group label-floating">
                <%= f.label :email, class: "control-label" %>
                <%= f.email_field :email, class: "form-control" %>
              </div>

              <div class="form-group label-floating">
                <%= f.label :password, class: "control-label" %>
                <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
                <p class="text-info">(leave blank if you don't want to change it)</p>
              </div>

              <div class="form-group label-floating">
                <%= f.label :password_confirmation, class: "control-label" %>
                <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
              </div>

              <div class="form-group label-floating">
                <%= f.label :current_password, class: "control-label" %>
                <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
                <p class="text-info">(we need your current password to confirm your changes)</p>
              </div>

              <div class="button-group">
                <%= f.submit "Update", class: "btn btn-raised btn-primary" %>
                <%= link_to "Back", request.referrer, class: "btn btn-primary btn-simple" %>
              </div>

              <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-simple btn-sm btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>
